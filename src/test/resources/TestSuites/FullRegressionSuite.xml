<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Full Regression Suite" verbose="1">
    <test name="Positive Login Tests">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="com.practiceautomation.tests.login.LoginTests">
                <methods>
                    <include name="positiveLoginTeat" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="Incorrect Username Test">
        <parameter name="browser" value="firefox" />
        <parameter name="username" value="wrong-username" />
        <parameter name="password" value="Password123" />
        <parameter name="expectedErrorMessage" value="Your username is invalid!"/>
        <classes>
            <class name="com.practiceautomation.tests.login.LoginTests">
                <methods>
                    <include name="negativeLoginTest" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Incorrect Password Test">
        <parameter name="browser" value="chrome" />
        <parameter name="username" value="student" />
        <parameter name="password" value="wrong-password" />
        <parameter name="expectedErrorMessage" value="Your password is invalid!" />
        <classes>
            <class name="com.practiceautomation.tests.login.LoginTests">
                <methods>
                    <include name="negativeLoginTest" />
                </methods>
            </class>
        </classes>
    </test>
    
    <test name="Exception Tests">
        <classes>
            <class name="com.practiceautomation.tests.exceptions.ExceptionTests"></class>
        </classes>
    </test>
</suite>